#include "lists.h"
#include <stdio.h>


/**
 * check_cycle - will check if there is a cycle in a linked list
 * @list: the linked list to be checked
 *
 * Return: 0 if there's no cycle, 1 if there is
 */
int check_cycle(listint_t *list)
{
    listint_t *turtle = list->next;
    if (list->next != NULL)
        list = list->next->next;
    else
        return (0);

    printf("%d %d", turtle->n, list->n);
    while (turtle != NULL && list->next != NULL)
    {
        if (turtle->n == list->n)
            return (1);
        turtle = turtle->next;
        list = list->next->next;
    }
    return (0);
}
